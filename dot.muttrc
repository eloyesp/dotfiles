set realname = "Eloy Espinaco"
set mbox_type = Maildir
set folder = ~/Mail/gmail
set spoolfile = ~/Mail/gmail/[Gmail].Todos

set alias_file = ~/.mutt_aliases
source ~/.mutt_aliases
set query_command = "goobook query '%s'"
